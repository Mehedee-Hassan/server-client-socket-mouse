<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.liquiddark.mousepad.mhr.mousepad.ReceiveActivity">
    <View android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/mousePad"
        android:background="#3f51b5"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/coordinateTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap to click"
        android:id="@+id/lets_play_tv"
        android:layout_marginTop="191dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mouse_pointer"/>




    <Button
        android:text="ENTER"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:id="@+id/enterButton"
        android:textColor="#fff3e0"
        android:background="#ab47bc"
        android:layout_alignBaseline="@+id/escapeButton"
        android:layout_alignBottom="@+id/escapeButton"
        android:layout_alignParentEnd="true"/>

    <View android:layout_height="120dp"
        android:layout_width="28dp"
        android:id="@+id/mouseScroll"
        android:background="@color/mouse_pointer"
        android:foregroundGravity="center"

        android:layout_marginEnd="5dp"
        android:layout_above="@+id/enterButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="172dp" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:id="@+id/closeWindowButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="ESC"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:id="@+id/escapeButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/closeWindowButton" />
</RelativeLayout>
