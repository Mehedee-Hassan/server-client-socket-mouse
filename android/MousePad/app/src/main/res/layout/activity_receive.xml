<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.liquiddark.mousepad.mhr.mousepad.ReceiveActivity">
    <View android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/mousePad"
        android:background="@color/mouse_pad_back"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/coordinateTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lets Play"
        android:id="@+id/lets_play_tv"
        android:layout_marginTop="191dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mouse_pointer"/>

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:id="@+id/closeWindowButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <View android:layout_height="180dp"
        android:layout_width="20dp"
        android:id="@+id/mouseScroll"
        android:background="@color/mouse_pointer"
        android:foregroundGravity="center"

        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />

    <Button
        android:text="ENTER"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:id="@+id/enterButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
