<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:context=".PcListActivity"
        android:background="#00E5FF"


        >


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Searching ..."
            android:id="@+id/listViewTitileTextView"


            android:textColor="#212121"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textStyle="italic"

        />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/imageViewPcMobile"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_above="@+id/imageViewAddButton"
                android:layout_marginBottom="150dp"

                />
            <!--android:src="@drawable/pc_icon_red"-->

            <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewMessagetextView"
            android:visibility="visible"
            android:textAlignment="center"
            android:gravity="center"
            android:foregroundGravity="center"

            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:textColor="#ff5252"

            />

        <ListView
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:id="@+id/clientListView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_weight="0.22"

            />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/refresh"
                android:id="@+id/refreshImageView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_alignEnd="@+id/clientListView"
                android:layout_marginBottom="13dp"
                />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/add2"
                android:padding="0dp"
                android:id="@+id/imageViewAddButton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="20dp"
                />



            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/info"
                android:padding="0dp"
                android:id="@+id/imageViewInstruction"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30dp"
                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarClientList"
                android:visibility="visible"
                android:foregroundGravity="bottom"
                android:layout_above="@+id/imageViewAddButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:src="@drawable/help_key"
                android:id="@+id/helpkey"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/imageViewInstruction"
                android:layout_centerHorizontal="true" />

            <!--Please press refresh icon\nand\nMake sure your pc wifi\nis enabled.\n-->
    </RelativeLayout>


</LinearLayout>



