<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC407A"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    tools:context="com.liquiddark.mousepad.mhr.mousepad.SplashActivity">





    <ImageView
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:src="@drawable/doesntwork"
        android:id="@+id/imageViewdoesntwork"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="18dp"
        />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:src="@drawable/back_key"
        android:id="@+id/imageViewBackButton4"
        android:padding="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:foregroundGravity="center"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/couldnotfind3"
        android:id="@+id/imageView5"
        android:minHeight="50dp"
        android:layout_weight="4.33"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/imageViewdoesntwork"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="restart your pc\n mousepad app \n&amp;\n try refreshing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewInstruction4"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16dp"

        android:layout_marginTop="28dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />
    <!--downloadtopc-->

</RelativeLayout>
