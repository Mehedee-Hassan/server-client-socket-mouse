<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liquiddark.mousepad.mhr.mousepad">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mousepad_icon4"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.PcListActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.PadActivity" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.android.launcher.action.MOUSE_PAD_SPLASH_ACT_STAR_989" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity2" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity3" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity4" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity5" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity6" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.instruction.activity.InstructionActivity7" />
        <activity android:name="com.liquiddark.mousepad.mhr.com.liquiddark.mousepad.keyboard.KeyboardActivity"></activity>
    </application>

</manifest>